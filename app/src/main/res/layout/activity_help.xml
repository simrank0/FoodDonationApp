<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. How to post a donation or a food request?"
        tools:ignore="MissingConstraints"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ans1"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tv1"

        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_margin="5dp"
        android:text="2. Navigation Bar"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ans2"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have any query you can mail us at:"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
        android:textColor="@color/colorAccent"
        tools:ignore="MissingConstraints"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        android:textColor="@color/colorPrimary"
        android:text="fooddonation@gmail.com"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
