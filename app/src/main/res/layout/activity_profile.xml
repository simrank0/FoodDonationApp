<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/person"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_margin="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/person"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:hint="First Name"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/person"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="63dp" />

    <Button
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/ic_phone"
        app:layout_constraintTop_toBottomOf="@+id/person"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@+id/phone"
        app:layout_constraintLeft_toRightOf="@+id/phone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="236dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mail"
        app:layout_constraintTop_toBottomOf="@+id/number"
        app:layout_constraintTop_toTopOf="@+id/mail"
        app:layout_constraintLeft_toLeftOf="@+id/number"
        android:textSize="22sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/mail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_mail"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/loc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@+id/mail"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/location"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/loc"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="@+id/email"
        app:layout_constraintTop_toTopOf="@+id/loc"
        android:textSize="22sp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
